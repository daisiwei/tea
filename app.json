{
  "pages": [
    "pages/Car/index",
    "pages/UserCenter/index",
    "pages/Index/index",
    "pages/Classify/index",
    "pages/logs/logs"
  ],
  "window": {
    "backgroundTextStyle": "light", 
    "navigationBarBackgroundColor": "#000", 
    "navigationStyle": "default",
    "enablePullDownRefresh": false,
    "onReachBottomDistance": 50
  },
  "tabBar": {
    "color": "#989898", 
    "selectedColor": "#333999", 
    "backgroundColor": "#ffffff", 
    "borderStyle": "black", 
    "list": [{
        "text": "首页",
        "pagePath": "pages/Index/index",
        "iconPath": "assets/images/home.png",
        "selectedIconPath": "assets/images/home-selected.png"
      },
      {
        "text": "分类",
        "pagePath": "pages/Classify/index",
        "iconPath": "assets/images/classify.png",
        "selectedIconPath": "assets/images/classify-selected.png"
      },
      {
        "text": "购物车",
        "pagePath": "pages/Car/index",
        "iconPath": "assets/images/car.png",
        "selectedIconPath": "assets/images/car-selected.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/UserCenter/index",
        "iconPath": "assets/images/user.png",
        "selectedIconPath": "assets/images/user-selected.png"
      }]
  },
  "useExtendedLib": {
    "kbone": true,
    "weui": true
  },
  "style": "v2",
  "sitemapLocation": "sitemap.json"
}